<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="horusai.masterapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/logo_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- HOME ACTIVITY -->
        <activity
            android:name=".login_register_package.home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- LOGIN ACTIVITY -->
        <activity
            android:name=".login_register_package.login"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <!-- ASK FOR PHONE ACTIVITY -->
        <activity
            android:name=".login_register_package.telephone"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <!-- ASK FOR CODE ACTIVITY -->
        <activity
            android:name=".login_register_package.confirmation_code"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <!-- REGISTER ACTIVITY -->
        <activity
            android:name=".login_register_package.register"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
    </application>

</manifest>