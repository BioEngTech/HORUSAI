<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context=".login_register_package.register"
    android:focusable="true">

    <TextView
        android:id="@+id/telephone_layout_apptextname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:text="@string/app_name_text"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.TextView"
        android:textColor="@color/colorwhite"
        android:textSize="48sp" />

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="265dp"
        android:background="@color/colorwhite" />

    <TextView
        android:id="@+id/telephone_layout_insert_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="239dp"
        android:gravity="center"
        android:text="@string/phone_text"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorgreen"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="293dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="319dp"
        android:orientation="horizontal">

    <EditText
        android:id="@+id/telephone_layout_number"
        android:layout_width="265dp"
        android:layout_height="25dp"
        android:background="@color/transparent"
        android:paddingLeft="5dp"
        android:ems="10"
        android:hint="@string/insert_phone_number_text"
        android:inputType="phone"
        android:textColor="@color/colordark"
        android:textColorHint="@color/colorgray"
        android:textSize="20sp" />

    </LinearLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310dp"
        android:background="@drawable/rounded_white" />

    <Button
        android:id="@+id/telephone_layout_send_btn"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="143dp"
        android:background="@drawable/rounded_green"
        android:text="@string/send_text"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.TextView"
        android:textColor="@color/colorwhite"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/register_layout_terms"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="98dp"
        android:gravity="center"
        android:text="@string/confirmation_sent_notification_text"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/background_light"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:background="@color/colorwhite" />

    <LinearLayout
        android:layout_width="245dp"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/telephone_layout_no_account_text"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="@string/already_have_an_account_text"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorwhite" />

        <Button
            android:id="@+id/telephone_layout_sign_in_btn"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:background="#003afaaa"
            android:text="@string/sign_in_here_btn"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#FF02A27F"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>

