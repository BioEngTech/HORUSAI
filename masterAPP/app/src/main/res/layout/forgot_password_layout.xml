<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context=".login_register_package.forgotPassword"
    android:focusable="true">

    <TextView
        android:id="@+id/forgot_password_layout_apptextname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:text="@string/app_name_text"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.TextView"
        android:textColor="@color/colorwhite"
        android:textSize="48sp" />

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="265dp"
        android:background="@color/colordark" />

    <TextView
        android:id="@+id/forgot_password_layout_insert_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="239dp"
        android:gravity="center"
        android:text="@string/e_mail_text"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colordark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="293dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="319dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/forgot_password_layout_email"
            android:layout_width="265dp"
            android:layout_height="25dp"
            android:background="@color/transparent"
            android:paddingStart="10dp"
            android:layout_gravity="center_vertical"
            android:ems="10"
            android:hint="@string/insert_your_e_mail_text"
            android:inputType="textVisiblePassword"
            android:textColor="@color/colordark"
            android:textColorHint="@color/colorgray"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/forgot_password_layout_close_cross_email"
            android:layout_width="21dp"
            android:layout_height="25dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="2dp"
            android:contentDescription="@string/close_cross_user_id"
            android:src="@drawable/close_cross_white" />

    </LinearLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310dp"
        android:background="@drawable/rounded_white" />

    <Button
        android:id="@+id/forgot_password_layout_send_btn"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="143dp"
        android:background="@drawable/rounded_blue"
        android:text="@string/send_text"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.TextView"
        android:textColor="@color/colorwhite"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/forgot_password_layout_terms"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:text="@string/confirmation_sent_e_mail_notification_text"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/background_light"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:background="@color/colorwhite" />

        <Button
            android:id="@+id/forgot_password_layout_go_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal"
            android:background="@color/transparent"
            android:text="@string/go_back_here_text"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorblue"
            android:textStyle="bold" />

</RelativeLayout>

