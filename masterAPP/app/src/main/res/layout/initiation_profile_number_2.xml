<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/initiationProfileNumber2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:padding="10dp"
    tools:context=".initiation.configureTypeUser">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:gravity="center"
        android:text="@string/profile_text"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:layout_weight="1.15">

            <ImageView
                android:id="@+id/initiationProfileNumber2_ImageUser"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/photo"
                android:contentDescription="@string/photo_image_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:layout_weight="0.4">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/initiationProfileNumber2_MrMs"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/mr_text"
                        android:textColor="@color/colorMain"
                        android:textSize="20sp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>

                    <horusai.masterapp.utils.clearableNotLockableEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:id="@+id/initiationProfileNumber2_Name"
                        android:textColor="@color/colorDark"
                        android:ems="10"
                        android:inputType="textVisiblePassword"
                        android:maxLines="1"
                        android:hint="@string/name_hint"
                        android:textSize="20sp"
                        android:textColorHint="@color/colorGrayNormal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">
                    </horusai.masterapp.utils.clearableNotLockableEditText>

                </LinearLayout>

            </android.support.v7.widget.CardView>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.35"
        android:gravity="center"/>

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="46dp"
        android:paddingRight="46dp"
        android:orientation="horizontal"
        android:layout_weight="0.75">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/initiationProfileNumber2_Man"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/initiationProfileNumber2_ManImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/boy"
                    android:contentDescription="@string/image_patient_content" />

                <ImageView
                    android:id="@+id/initiationProfileNumber2_ManTick"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignRight="@+id/initiationProfileNumber2_ManImage"
                    android:layout_alignEnd="@+id/initiationProfileNumber2_ManImage"
                    android:src="@drawable/tick_smaller"
                    android:contentDescription="@string/tick_male_content" />

            </RelativeLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.2"
                android:gravity="center"/>

            <RelativeLayout
                android:id="@+id/initiationProfileNumber2_Woman"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/initiationProfileNumber2_WomanImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/girl"
                    android:contentDescription="@string/image_female_content" />

                <ImageView
                    android:id="@+id/initiationProfileNumber2_WomanTick"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignRight="@+id/initiationProfileNumber2_WomanImage"
                    android:layout_alignEnd="@+id/initiationProfileNumber2_WomanImage"
                    android:src="@drawable/tick_smaller"
                    android:visibility="invisible"
                    android:contentDescription="@string/tick_female_content" />

            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="46dp"
        android:paddingRight="46dp"
        android:orientation="horizontal"
        android:layout_weight="0.25">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/male_text"
                android:gravity="center"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/colorMain" />


            <Space

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.2"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="@string/female_text"
                android:textSize="20sp"
                android:textColor="@color/colorMain" />

        </LinearLayout>

    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.05"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:layout_weight="0.4">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="15dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/date_of_birth_text"
                        android:textColor="@color/colorMain"
                        android:textSize="20sp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/initiationProfileNumber2_Birth"
                        android:textColor="@color/colorDark"
                        android:hint="@string/birth_hint_text"
                        android:textSize="20sp"
                        android:textColorHint="@color/colorGrayNormal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">
                    </TextView>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <Space

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.55"
        android:gravity="center">

    </Space>

</LinearLayout>