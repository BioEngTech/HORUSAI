<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:typeface">serif</item>
        <item name="colorPrimary">@color/colorMain</item>
        <item name="colorPrimaryDark">@color/colorMain</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="cardViewStyle">@style/CardView</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="TextView.InputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?android:textColorHint</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="CollapsedAppBar" parent="@style/AppTheme">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CardWidgetStyle" parent="@android:style/Theme.DeviceDefault">
        <item name="android:background">@color/colorBlueSoft</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorDark</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="hint" parent="@style/TextAppearance.Design.Hint">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppThemeSecondary" parent="@style/AppTheme">
        <item name="colorPrimaryDark">@color/colorBlueLight</item>
    </style>

    <style name="HintLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorMain</item>
    </style>

    <style name="TextLabelAccent" parent="@style/AppTheme">
        <item name="android:colorControlNormal">@color/colorMain</item>
        <item name="android:colorControlActivated">@color/colorMain</item>
        <item name="android:colorControlHighlight">@color/colorMain</item>
    </style>

    <style name="MyErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="ToolbarStyleWhite" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="TabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
    </style>
</resources>
